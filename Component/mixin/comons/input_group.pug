mixin blog_input_group(text1,text2)
  .form__info__item.-first
    p=text1 
      span * 
    input(type="text")
  .form__info__item
    p=text2
      span * 
    input(type="text")  

mixin blog_input_group__one(text1,text2)
  .form__info__item.-first.-one
    p=text1 
      span * 
    input(type="text")
  .form__info__item.-one
    p=text2
      span * 
    input(type="text") 


mixin blog_input_group(text1,text2,name1,name2)
  .form__info__item.-first
    p=text1 
      span * 
    input(type="text" name=name1)
  .form__info__item
    p=text2
      span * 
    input(type="text" name=name2)  

mixin blog_input_group(text1,text2,name1,name2,type1,type2)
  case type1
    when 'tel'
      .form__info__item.-first
        p=text1 
          span * 
        input(type=type1 name=name1  pattern="[0-9]{4} [0-9]{3} [0-9]{3}")
      .form__info__item
        p=text2
          span * 
        input(type=type2 name=name2 )  
    default 
      .form__info__item.-first
        p=text1 
          span * 
        input(type=type1 name=name1)
      .form__info__item
        p=text2
          span * 
        input(type=type2 name=name2)  
  
