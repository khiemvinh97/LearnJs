mixin blog_detail(items)
  each item in items
    .blog__detail
      .list__blog
        img(src="./img/blog/blog_main1.jpg").img
        .list__blog__text
          h3=item.name
          .post-by
            p=item.date
            p
              i.fa.fa-user 
              | Đăng bởi 
              span=item.user
            p
              i.fas.fa-comments
              |12 Bình luận
          each parts in item.text
            p=parts.text1
            p=parts.text2
            #parts.img_blog
              if parts.img_blog == undefined
                p=parts.text3
              else
                .blog__detail__img 
                  img(src=`./img/blog/${parts.img_blog}`).img
      .blog__detail__footer
        .blog__detail__footer__left
          h3 TAGS: 
          +blog_detail_tag(blog_detail_tag)
        .blog__detail__footer__right
          h3 CHIA SẺ:
          +blog_detail_social(listIcon)   
