mixin blog_detail_tag(items)
  each item in items
    a(href="#")=item
mixin blog_detail_social(items)
  each item in items 
    span
      i(class=item)


mixin blog_chat()
  -for( var i=0 ;i<3;i++)
    .blog__detail__comment(class=`-count${i+1}`)
      img(src="./img/blog/blog_user.jpg").img
      .comment__content
        h3 HOANG TRUONG ANH
        .day-post 
          p Thứ năm, ngày 23/10/2015 8:00 AM
